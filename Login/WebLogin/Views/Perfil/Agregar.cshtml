@model WebLogin.Models.PerfilModel
@{
    ViewBag.Title = "Agregar";
}
<section class="container">
    <div class="row">
        <div class="col-md-12">
            <center><h2 class="page-header">AGREGAR PERFIL</h2></center>
        </div>
    </div>

    @using (Html.BeginForm("AgregarPerfil", "Perfil", new { @class = "" }))
    {
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-2 control-label">TIPO</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.tipo, new { @class = "form-control", placeholder = "TIPO" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">DESCRIPCION</label>
                <div class="col-md-4">
                    @Html.TextAreaFor(model => model.descripcion, new { @class = "form-control", placeholder = "DESCRIPCION" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-offset-4 col-md-8">
                    <input class="btn btn-primary" type="submit" value="AGREGAR" />
                    <a class="btn btn-default" href="~/Perfil">VOLVER</a>
                </div>

            </div>
        </div>
    }
</section>