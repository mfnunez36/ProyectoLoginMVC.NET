@model WebLogin.Models.UsuarioModel
@{
    ViewBag.Title = "Index";
}

<section>
    @using (Html.BeginForm("LogIn", "Login", new { @class = "" }))
    {
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-2 control-label">Correo</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.correo, new { @class = "form-control", placeholder = "Correo" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Contraseña</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.contraseña, new { @class = "form-control", placeholder = "Contraseña" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-offset-4 col-md-8">
                    <input class="btn btn-primary" type="submit" value="INGRESAR" />
                    <a class="btn btn-default" href="~/Home">VOLVER</a>
                </div>

            </div>
        </div>
    }
</section>

